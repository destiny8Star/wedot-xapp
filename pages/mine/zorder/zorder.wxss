/* pages/mine/zorder/zorder.wxss */

.order{
    background: #F8F8F8
}

.tit,.tits{
    width: 100%;
    height: 54rpx;
    font-size: 24rpx;
    color: #3E3E4D;
    font-weight: bold;
    text-align: center;
    line-height: 54rpx;
}
.tits{
    color: #D27D3C;
    background: #F9F7DB;
}
.lack{
    width: 100%;
    margin-top: 170rpx;
    font-size: 28rpx;
    color: #909090;
    text-align: center
}
.lack image{
    width:376rpx;
    height: 362rpx;
    display: block;
    margin: 0 auto 34rpx;
}
.contbox{
    width: 100%;
    padding:26rpx 28rpx
}
.item{
    width: 100%;
    border-radius: 16rpx;
    background: #fff;
    padding:32rpx 26rpx;
    margin-bottom: 36rpx
}
.item-top{
    display: flex;
    align-items: center;
    margin-bottom: 10rpx
}
.top-name{
    font-size: 28rpx;
    color:#3E3E4D;
    margin-right: 24rpx
}
.top-phone{
    font-size: 28rpx;
    color:#909090;
}
.item-address{
    font-size: 28rpx;
    color: #3E3E4D;
    margin-bottom: 20rpx
}
.item-good{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between
}
.item-good image{
    width: 162rpx;
    height: 162rpx;
    border-radius: 4rpx;
    background: #ccc
}
.good-right{
    width: 448rpx;
}
.good-right-tit{
    width: 100%;
    font-size: 28rpx;
    color: #3E3E4D;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-weight: bold;
    margin-bottom: 10rpx
}
.good-right-zl{
    font-size: 24rpx;
    color: #909090;
    margin-bottom: 6rpx
}
.good-right-price{
    font-weight: bold;
    font-size: 24rpx;
    color: #3E3E4D
}
.price-num{
    font-size: 28rpx
}
.item-time{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #3E3E4D;
    font-size: 24rpx;
    margin-top: 25rpx
}
.time-num{
    font-size: 28rpx
}
.zl-num,.status-success,.status-fail{
    font-size: 28rpx;
    font-weight: bold
}
.status-success{
    color: #14ACEF
}
.status-fail{
     color: #FC2C54
}